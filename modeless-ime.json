{
  "title": "Modeless IME (ctrl-j to activate, Enter to deactivate)",
  "rules": [
    {
      "description": "ctrl-j: IME ON with Romaji conversion",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "shell_command": "/Users/kiyoka/.local/bin/mozc-modeless-macos/convert-romaji-clipboard.swift"
            },
            {
              "set_variable": {
                "name": "ime_active",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^org\\.gnu\\.Emacs$",
                "^org\\.gnu\\.AquamacsEmacs$",
                "^org\\.gnu\\.Aquamacs$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter"
          },
          "to": [
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "japanese_eisuu"
            },
            {
              "set_variable": {
                "name": "ime_active",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "ime_active",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "japanese_eisuu"
            },
            {
              "set_variable": {
                "name": "ime_active",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "ime_active",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
